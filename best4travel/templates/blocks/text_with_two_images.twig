<div class="relative pb-10 lg:pb-20 2xl:pb-32; bg-white">
    <div data-animate-reveal-center class="absolute bottom-0 left-1/2 -translate-x-1/2 w-screen h-[2px] border-t border-t-[#1C63A0] border-opacity-30"></div>
	<section class="relative bg-gradient-to-br from-[#1B629F] to-[#00C2F3] text-white">
		<div class="container">
			<div class="grid grid-cols-1 lg:grid-cols-5 gap-10 lg:gap-20">
				<div data-animate-stagger-left class="lg:col-span-2 block-content">
					{{ block.content }}
				</div>
				<div class="lg:col-span-3">
					<div class="relative aspect-4/3 pb-20">
						{% include "partial/image.twig" with { image: Image(block.image_1).src, alt: block.image_1.alt, class: "w-full w-[90%] h-full object-center object-cover pointer-events-none" } %}
						{% include "partial/image.twig" with { image: Image(block.image_2).src, alt: block.image_2.alt, class: "image-parallax-small w-1/3 absolute right-0 bottom-0 aspect-5/7 object-center object-cover pointer-events-none" } %}
					</div>
				</div>
			</div>
		</div>
	</section>
</div>
