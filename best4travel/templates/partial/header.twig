<header class="transition-all duration-300 fixed w-screen top-0 left-0 bg-transparent z-[100000] py-2 lg:py-1">
	<div data-navigation class="container z-20 w-full flex items-center justify-between transition-all duration-300">
		<a href="{{ site.url }}" rel="home">{% include 'icons/logo.twig' with { class: "logo z-20 relative max-sm:!w-36 max-lg:!w-48 max-2xl:w-[210px] duration-100" } %}</a>
		<nav id="nav-main" role="navigation" class="relative max-lg:h-6">
			{% include 'menu.twig' with {
				items: menu.get_items
			} %}
		</nav>
		<a class="button header-button arrow" href="/contact-us">
			<span>Contact Us</span>
			<svg width="37" height="37" viewbox="0 0 37 37" fill="none" xmlns="http://www.w3.org/2000/svg">
				<circle cx="18.5" cy="18.5" r="18" stroke="white" stroke-dasharray="2 2"/>
				<path d="M27.2652 19.2652C27.4116 19.1187 27.4116 18.8813 27.2652 18.7348L24.8787 16.3483C24.7322 16.2019 24.4948 16.2019 24.3483 16.3483C24.2019 16.4948 24.2019 16.7322 24.3483 16.8787L26.4697 19L24.3483 21.1213C24.2019 21.2678 24.2019 21.5052 24.3483 21.6517C24.4948 21.7981 24.7322 21.7981 24.8787 21.6517L27.2652 19.2652ZM9 19.375L27 19.375V18.625L9 18.625V19.375Z" fill="white"/>
			</svg>
		</a>
	</div>
</header>
<div class="destinations-menu max-lg:hidden pb-20 duration-1000 ease-in-out origin-top fixed top-0 left-0 bg-brandBlueDark w-screen h-0 z-[1000] pointer-events-none opacity-0">
	<div class="flex w-full h-full mt-20 border-t border-t-white border-opacity-25">
		{% for item in travel_types %}
			{% if item.slug != 'uncategorized' %}
				<a href="/travel-types/{{ item.slug }}" class="destinations-menu-item relative group h-full overflow-hidden w-full hover:w-[200%] flex items-center justify-center text-center border-l border-l-white border-opacity-25 bg-brandBlueDark duration-700 first-of-type:border-l-0">
					{% if item.internal_banner.background %}
						{% include "partial/image.twig" with { image: Image(item.internal_banner.background.url), alt: item.internal_banner.background.alt, class: "h-full z-20 w-full absolute top-0 left-0 object-center object-cover pointer-events-none" } %}
					{% endif %}
					<div class="absolute duration-500 w-full h-full z-30 top-0 left-0 bg-black bg-opacity-50 group-hover:bg-opacity-20"></div>
					<div class="font-heading text-4xl text-white z-40 flex flex-col items-center gap-3">
						{% if item.icon %}
							<img class="opacity-100" src="{{ item.icon.url }}" alt="{{ item.icon.alt }}">
						{% endif %}
						<span>{{ item.name }}</span>
						<span class="opacity-0 duration-500 delay-100 group-hover:opacity-100 text-sm font-body -translate-y-3 group-hover:translate-y-0">View destinations</span>
					</div>
					<div class="absolute z-40 apsect-1/1 w-full top-1/2 left-1/2 -translate-x-[35%] -translate-y-1/2">
						<div class="origin-center rotate aspect-1/1 rounded-full h-full w-[70%] border border-white border-dashed border-opacity-0 delay-50 duration-1000 ease-in-out group-hover:border-opacity-100"></div>
					</div>
				</a>
			{% endif %}
		{% endfor %}
	</div>
</div>
