{% extends "page.twig" %}

{% block banner %}
	{% include "banners/internal-banner.twig" with { custom_title: 'Destinations', custom_heading: post.name ~ ' ' ~ 'Travel' } %}
{% endblock %}

{% block content %}
	{% if travel_type_destinations %}
		<section class="bg-white relative">
			<div class="container">
				<h4 data-fade-up class="large-heading mx-auto text-center lg:mt-16 max-lg:mb-12 font-semibold lg:w-1/3 px-2">Select your destination:</h4>
				<div class="grid grid-cols-2 lg:grid-cols-3 gap-5 md:gap-10 lg:-mt-24">
					{% for item in travel_type_destinations %}
						{% include "tease-destination.twig" %}
					{% endfor %}
				</div>
			</div>
		</section>
	{% else %}
		<section class="bg-white relative !pb-12">
			<div class="container-small">
				<div data-fade class="block-content text-center">
					{{ post.description|wpautop }}
				</div>
			</div>
		</section>
	{% endif %}
	<section class="relative !py-10">
		<div class="container items-center">
			<a href="/travel-types" class="button round mx-auto">Back to Travel Types</a>
		</div>
	</section>
{% endblock %}
